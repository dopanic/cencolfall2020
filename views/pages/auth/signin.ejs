<%- include ../../partials/header.ejs %>
<article class="article">
    <div class="article__text--without_left_img">
        <h1>Sign In</h1>
        <form class="form" method="POST">
        <!-- Message Window -->
        <% if(messages.length > 0) { %>
            <div class="form__msg">
                <%= messages %>
            </div>
        <% } %>
        <!-- Form -->
            <fieldset class="form__fieldset">
                <label class="form__label" for="username">Username</label>
                <input class="form__input" name="username" placeholder="Username" required><br>
            </fieldset>
            <fieldset class="form__fieldset">
            <label class="form__label" for="password">Password</label>
            <input class="form__input" type="password" name="password" placeholder="Password" required>
            </fieldset>
            <button class="form__submit" type="submit">Sign in</button><br><br>
            <!-- <span>Don't have an account? <a href="/register" class="form__link" type="button">Register here</a></span> -->
        </form>
    </div>
</article>
<%- include ../../partials/footer.ejs %>